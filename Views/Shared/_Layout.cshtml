<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComputacionFCQ_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComputacionFCQ_MVC.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <div style="display:flex; background-color:rgb(30, 30, 30); margin:0; width:100%; height:55px; align-items:center;">
            <button class="flex" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"
            style="border:none; background-color:transparent; color:white; margin:0px; height:55px; width:55px;">
              <i class="bi bi-list" style="font-size:24px;"></i>
            </button>

            <div style="width:1px; height: 30px; background-color:gray; margin-right:15px;"></div>
            
            <div class="flex" style="color:lightgray; ">
                <i id="nav-icon" class="bi" style="margin-right:10px; font-size:18px; color:var(--fcq)"></i>
                <div id="nav-page" style="font-size: 16px;"></div>
            </div>
        </div>
    </header>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
      <div class="offcanvas-header flex">
          <img src="https://seeklogo.com/images/F/facultad-de-ciencias-quimicas-logo-82ADF31672-seeklogo.com.png?v=637823546160000000" style="height:60px; margin-right:15px;"/>

          <div style="font-family: Times New Roman;">
              <div style="font-size: 24px;">DEPTO. INFORMÁTICA</div>
              <div style="font-size: 16px;">Facultad de Ciencias Químicas</div>
          </div>
      </div>

      <hr style="margin-top:0px; margin-bottom:0px;"/>

      <div class="offcanvas-body" style="padding:0px;">

          <button class="nav-btn" onclick="@("window.location.href='" + @Url.Action("Sesiones", "Sesiones") + "'");">
              <i class="bi bi-house-fill nav-icon"></i>Sesiones
          </button>

          <button class="nav-btn" onclick="@("window.location.href='" + @Url.Action("Reservaciones", "Reservaciones") + "'");">
              <i class="bi bi-calendar nav-icon"></i>Reservaciones
          </button>

          <button class="nav-btn" onclick="@("window.location.href='" + @Url.Action("Programas", "Programas") + "'");">
              <i class="bi bi-grid-3x3-gap-fill nav-icon"></i>Programas
          </button>

          <button class="nav-btn" onclick="@("window.location.href='" + @Url.Action("Computadoras", "Computadoras") + "'");">
              <i class="bi bi-pc-display nav-icon"></i>Computadoras
          </button>

          <button class="nav-btn" onclick="@("window.location.href='" + @Url.Action("Reportes", "Reportes") + "'");">
              <i class="bi bi-download nav-icon"></i>Reportes
          </button>

      </div>
    </div>
    
    <div style="width:100%">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>