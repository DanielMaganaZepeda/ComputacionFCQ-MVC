<div class="flex" style="margin-left: auto; margin-right:auto; margin-top:30px; color:gray">

    <div>
        <div>Tipo de reporte</div>
        <select id="tipo" class="input" style="margin-right:15px">
            <option selected value="Sesiones">Sesiones</option>
            <option value="Reservaciones">Reservaciones</option>
            <option value="Programas">Programas</option>
            <option value="Computadoras">Computadoras</option>
        </select>
    </div>

    <div>
        Desde:
        <div id="div_desde" style="width:200px; margin-right:15px;"></div>
    </div>

    <div>
        Hasta:
        <div id="div_hasta" style="width:200px; margin-right:15px;"></div>
    </div>

    <div>
        <div style="height: 22px; display: block;"></div>
        <button class="btn btn-primary flex" style="height:35px;" onclick="GenerarReporte()">
            <i class="bi bi-download" style="font-size: 14px; margin-right: 5px;"></i>
            Descargar reporte
        </button>
    </div>
</div>

@section Scripts{
    <link rel="stylesheet" href="~/css/_DatePicker.css"/>
    <script src="~/js/_DatePicker.js"></script>
    <script src="~/js/Reporte.js"></script>
    <script>
        $('#div_desde').load('/_DatePicker/_DatePickerPartial?id=desde&tipo=desde');
        $('#div_hasta').load('/_DatePicker/_DatePickerPartial?id=hasta&tipo=hasta');
    </script>
}
